<%= form_tag("/advisors", method: "post") do %>
  <label for="name"> Name </label>
  <div>
      <input type="text" name="name" value="<%= @advisor.name %>">    
    </div>
  
  <label for="company"> Company </label>
    <div>
      <input type="text" name="company" value="<%= @advisor.company %>">    
    </div>

  <label for="phone"> phone </label>
    <div>
      <input type="text" name="phone" value="<%= @advisor.phone %>">    
    </div>

  <label for="email"> email </label>
    <div>
      <input type="email" name="email" value="<%= @advisor.email %>">    
    </div>

  <label for="logo"> Logo </label>
    <div>
      <input type="text" name="logo" value="<%= @advisor.logo %>">    
    </div>

  <label for="password"> Password </label>
    <div>
      <input type="password" name="password"> 
    </div>
  <label for="password_confirmation"> Confirm Password </label>
    <div>
      <input type="password" name="password_confirmation"> 
    </div>

    <div>
      <input type="submit">
    </div>
<% end %>