<div class="container-fluid">
<h3>Advisors</h3>
<hr>
  <% @client_advisors.each_slice(3) do |advisor3| %>
    <div class="row">
      <% advisor3.each do |advisor| %>
        <div class="col-md-4 well">
          <p>ID: <%= advisor.id %></p>
          <p><%= advisor.name %> from <%= advisor.company %></p>
          <p>Phone: <%= advisor.phone %></p> 
          <p>email: <%= advisor.email %></p>
          
          <%= Invitation.where(advisor_id: advisor.id).where(client_id: current_client.id).each do |invit| %>
            <p>invit</p>
          <% end %>
          <br>
          <a href="/advisors/<%= advisor.id %>/edit">Edit/Delete this Advisor</a>
          <div class="advisor_logo"><%= image_tag(advisor.logo) %></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>